---
const { pathname } = Astro.props;
---

<nav class="bg-white shadow hidden sm:block">
  <div class="max-w-7xl mx-auto px-2 sm:px-6 lg:px-8">
    <div class="relative flex justify-between h-16">
      <div
        class="flex-1 flex items-center justify-center sm:items-stretch sm:justify-between"
      >
        <div class="flex-shrink-0 flex items-center">
          <a href="/">
            <img
              class="h-8 w-auto"
              src="/assets/logo.svg"
              alt="Workflow"
              width="616"
              height="67"
            />
          </a>
        </div>
        <div class="hidden sm:ml-6 sm:flex sm:space-x-8">
          {[
            ['Welcome', '/'],
            ['Homepage', '/homepage'],
            ['Rich Content', '/rich-content'],
            ['Checklist', '/checklist'],
          ].map(([label, path]) => (
            <a
              href={path}
              class={
                pathname === path
                  ? 'border-green-500 text-gray-900 inline-flex items-center px-1 pt-1 border-b-2 font-medium'
                  : 'border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 inline-flex items-center px-1 pt-1 border-b-2 font-medium'
              }
            >
              {label}
            </a>
          ))}
        </div>
      </div>
    </div>
  </div>
</nav>
